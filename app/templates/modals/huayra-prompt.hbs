{{#modal-dialog
    close=(action model.cancel model.close)
    targetAttachment="center"
    translucentOverlay=true}}
<h1>{{model.title}}</h1>
{{input value=model.value}}
<button {{action model.cancel model.close}}>Cancelar</button>
<button {{action model.accept model.value model.close}}>Aceptar</button>
{{/modal-dialog}}
