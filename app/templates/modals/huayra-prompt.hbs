{{#modal-dialog
    close=(action model.cancel model.close)
    targetAttachment="center"
    container-class="small-dialog"
    translucentOverlay=true}}

<h1>{{model.title}}</h1>
<h5>{{note}}</h5>

<div class="ui input">
  {{input value=model.value id="prompt-value"}}
</div>

<div class="button-container">
  <button id="prompt-aceptar" disabled={{isInvalid}} class="ui button primary" {{action model.accept model.value model.close}}>
    Aceptar
  </button>
  <button id="prompt-cancelar" class="ui button" {{action model.cancel model.close}}>Cancelar</button>
</div>

{{/modal-dialog}}
