{{#modal-dialog
    close=(action model.cancel model.close)
    targetAttachment="center"
    container-class="small-dialog"
    translucentOverlay=true}}

<h1>{{model.title}}</h1>


<div class="ui input">
  {{input value=model.value}}
</div>

<div class="button-container">
  <button class="ui button primary" {{action model.accept model.value model.close}}>Aceptar</button>
  <button class="ui button" {{action model.cancel model.close}}>Cancelar</button>
</div>

{{/modal-dialog}}
