<div class="uk-panel">
  <span class="huayra-player-bpm">
    BPM: {{adjustable-number value=pattern.bpm min=40 max=200 onChange="onChange"}}
  </span>
  {{huayra-stepslimit-picker stepslimit=player.stepsLimit onStepslimitSelected="updateStepsLimit"}}
</div>
</div>
