<div class='huayra-player-ui'>
<div class='huayra-player-handler'>

  {{#if playing}}
    <button {{action "togglePlay"}} id='stop-button' class="uk-button uk-active button-fixed-width-sm">{{fa-icon icon="stop"}} Stop</button>
  {{else}}
    <button {{action "togglePlay"}} id='play-button' class="uk-button button-fixed-width-sm">{{fa-icon icon="play"}} Play</button>
  {{/if}}

</div>



<!--
