<div class='huayra-player-ui'>
<div class='huayra-player-handler'>

  {{#if playing}}
    <button {{action "togglePlay"}} id='stop-button' class="uk-button uk-active button-fixed-width-sm">{{fa-icon icon="stop"}} Stop</button>
  {{else}}
    <button {{action "togglePlay"}} id='play-button' class="uk-button button-fixed-width-sm">{{fa-icon icon="play"}} Play</button>
  {{/if}}

  {{#if recorder.recording}}
    <button class="uk-button uk-active" disabled=disabled>{{fa-icon icon="spinner" spin=true}} Grabando ...</button>
  {{else}}
    <button class="uk-button  button-fixed-width-sm" {{action "toggleRecord"}}>{{fa-icon icon="microphone"}} Grabar</button>
  {{/if}}

</div>



<!--
<div class='slider'>
  {{input value=player.bpm type='range' min=40 max=200}}
