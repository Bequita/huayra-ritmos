<div class="huayra-track-id {{trackColor}} cursor-pointer" {{action "onEditTrack" track}} >
  {{huayra-sound-switch value=track.enabled}}

  <p class="huayra-track-ix">{{indexNumber}}</p>

  <p class="huayra-track-name">
    <span {{action "onEditTrack" track}}>{{trackName}}</span>
  </p>

</div>

<div class='huayra-track-step-container {{trackColor}}'>
  {{#each track.steps as |step index|}}
    {{huayra-step index=index player=player sound=track.sound step=step track=track onChange='onChange'}}
  {{/each}}

  {{huayra-track-actions track=track onChange='onChange' onRemove=onRemoveTrack isLastTrack=isLastTrack}}
</div>
